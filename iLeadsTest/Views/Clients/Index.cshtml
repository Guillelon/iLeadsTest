@model List<iLeadsTest.ClientListViewModel>

@{
    ViewBag.Title = "Index";
}
<br/>
<div><button id="uploadButtonModal" class="btn btn-primary">Upload File</button></div>
<div>
    <table id ="clientsTable">
        <thead>
            <tr>
                <th>Pin Number</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var viewModel in Model)
            {
                <tr>
                    <td>
                        @viewModel.PinNumber
                    </td>
                    <td>
                        @viewModel.FirstName
                    </td>
                    <td>
                        @viewModel.LastName
                    </td>
                    <td>
                        @viewModel.StreetAddress
                    </td>
                    <td>
                        @viewModel.City
                    </td>
                    <td>
                        @viewModel.State
                    </td>
                    <td>
                        @viewModel.ZipCode
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Upload File</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_UploadFile", new iLeadsTest.ViewModels.UploadViewModel())
            </div>
            <div class="modal-footer">
                
        </div>
    </div>
  </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#clientsTable').DataTable({"paging":   false,
            "ordering": false,
            "info": false
        });
        $("#uploadButtonModal").click(function ()
        {        
            $("#basicModal").modal();
        })
    });
</script>